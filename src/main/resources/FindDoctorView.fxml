<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.lab2.controller.FindDoctorViewController" spacing="10">
  <TextField fx:id="lastNameField" promptText="Last Name"/>
  <TextField fx:id="firstNameField" promptText="First Name"/>
  <TextField fx:id="middleNameField" promptText="Middle Name"/>
  <ComboBox fx:id="specializationComboBox" promptText="Select Specialization"/>
